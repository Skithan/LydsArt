rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Simple admin check using your admin email
    function isAdmin() {
      return request.auth != null && request.auth.token.email == "lydiapatersonart@gmail.com";
    }
    
    // Allow public read access to all documents
    // Only lydiapatersonart@gmail.com can write to any collection
    match /{document=**} {
      allow read: if true; // Public read access
      allow write: if isAdmin(); // Only lydiapatersonart@gmail.com can write
    }
  }
}
