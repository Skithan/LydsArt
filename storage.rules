rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files
    match /{allPaths=**} {
      allow read: if true;
      // Only lydiapatersonart@gmail.com can write to any path
      allow write, delete: if request.auth != null 
        && request.auth.token.email == "lydiapatersonart@gmail.com";
    }
  }
}
