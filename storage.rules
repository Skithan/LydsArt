rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files
    match /{allPaths=**} {
      allow read: if true;
    }
    
    // Allow authenticated admin users to write/delete files in artwork folder
    match /artwork/{fileName} {
      allow write, delete: if request.auth != null 
        && request.auth.token.email == "lydiapatersonart@gmail.com";
    }
    
    // Allow authenticated admin users to upload files
    match /{allPaths=**} {
      allow write: if request.auth != null 
        && request.auth.token.email == "lydiapatersonart@gmail.com"
        && resource == null; // Only allow creating new files, not overwriting
    }
  }
}
